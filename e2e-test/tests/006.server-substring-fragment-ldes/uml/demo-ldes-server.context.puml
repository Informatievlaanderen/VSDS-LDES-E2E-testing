@startuml "GRAR Use Case - Demo - Context Diagram"
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title GRAR Use Case - Demo - Context Diagram

Person(tester, "Tester")

System_Ext(generator, "JSON Data Generator", "Simple generator creating\naddress state updates\n(GRAR format)")
System(nifi, "Apache NiFi system","Contains\n**GRAR Workflow**")
System(server, "LDES Servers", "LDES Server ingesting & serving addresses")
SystemDb(database, "Storage", "MongoDB - Contains LDES members and fragments")

Rel_R(generator, nifi, "pushes\naddress states", "HTTP (method POST)")
Rel_D(tester, nifi, "create and run workflow", "HTTPS")
Rel_D(tester, server, "verifies LDES substring & time-based fragmented", "HTTP")
Rel_R(nifi, server, "pushes\naddress versions", "HTTP (method POST)")
Rel_R(server, database, "stores and retrieves LDES members", "mongo")

@enduml