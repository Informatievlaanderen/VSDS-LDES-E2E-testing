  "license": "MIT",
  "dependencies": {
    "fastify": "^3.29.0",
    "minimist": "^1.2.6"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.33",
    "jest": "^28.1.0",
    "node-dev": "^7.4.3",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
