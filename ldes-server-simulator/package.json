    "@types/minimist": "^1.2.2",
    "@types/node": "^18.11.18",
    "jest": "^29.3.1",
    "node-dev": "^8.0.0",
    "ts-jest": "^29.0.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
