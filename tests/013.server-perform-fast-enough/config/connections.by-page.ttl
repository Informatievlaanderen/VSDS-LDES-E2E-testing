@prefix tree:    <https://w3id.org/tree#>.
@prefix server:  <http://example.org/> .
@prefix xsd:     <http://www.w3.org/2001/XMLSchema#> .
@prefix ldes:    <https://w3id.org/ldes#> .

@base <http://localhost:8080> .

</connections/by-page> a tree:Node ; 
  tree:viewDescription [ a tree:ViewDescription ;
    server:fragmentationStrategy ([
		a server:Fragmentation ;
		server:name "pagination" ;
		server:memberLimit "100"^^xsd:integer ;
	]) ;
	ldes:retentionPolicy [
    	a ldes:DurationAgoPolicy  ;
        tree:value "P3D"^^xsd:duration ;
    ] ;
] .
