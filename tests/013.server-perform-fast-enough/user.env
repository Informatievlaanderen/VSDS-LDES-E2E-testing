# Use case
# USECASE_NAME=gtfs-direct-connect

# GTFS2LDES compose env vars
GTFS_SOURCE=https://gtfs.irail.be/de-lijn/de_lijn-gtfs.zip # NOTE that this De Lijn data is freely available here and not on their site ?!
GTFSRT_SOURCE=https://api.delijn.be/gtfs/v1/realtime
GTFS2LDES_DATA_FOLDER=~/data/gtfs-direct/delijn/lc/
GTFS_BASE_IRI=https://data.delijn.be/

# Possibly mandatory (depends on source)
AUTH_HEADER=Ocp-Apim-Subscription-Key
AUTH_HEADER_VALUE=34c0fd7500a841ae80782f443f93722c

# Server compose env vars
SPRING_DATA_MONGODB_DATABASE=delijn
LDES_SERVER_TMP_FOLDER=~/data/tmp

# Mongo compose env vars
MONGODB_DATA_FOLDER=~/data/gtfs-direct/delijn/db/

# Optional

# GTFS2LDES_TAG=20230129t1743
# LDES_SERVER_TAG=20230127t1614
# MONGODB_TAG=6.0.3

# GTFS 2 LDES
# RUN_ON_LAUNCH=true
# THROTTLE_RATE=1000

# Geospatial View
# VIEWS_0_FRAGMENTATIONS_0_CONFIG_MAXZOOMLEVEL=13
# VIEWS_0_FRAGMENTATIONS_1_CONFIG_MEMBERLIMIT=1000
# VIEWS_0_RETENTIONPOLICIES_0_CONFIG_DURATION=P3D



